@using Klinika.Helper;
@model Klinika.Models.AddPacijentVM
@{
}
<h3>Dodaj pacijenta</h3>
<form asp-action="Add" class="mt-5">
    <div class="mb-3">
        <label asp-for="ImePrezime" class="form-label"></label>
        <input style="width: 40%" asp-for="ImePrezime" class="form-control">
        <span asp-validation-for="ImePrezime" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DatumRodjenja" class="form-label"></label>
        <input style="width: 40%" asp-for="DatumRodjenja" class="form-control">
        <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Spol" class="form-label"></label>
        <select style="width: 40%" class="form-control" asp-for="Spol" asp-items="Html.GetEnumSelectList<SpolEnum>()">
            <option selected="selected" value="">Odaberite spol</option>
        </select>
        <span asp-validation-for="Spol" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Adresa" class="form-label"></label>
        <input style="width: 40%" asp-for="Adresa" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="BrojTelefona" class="form-label"></label>
        <input style="width: 40%" asp-for="BrojTelefona" class="form-control">
    </div>
  
    <button type="submit" class="btn btn-primary">Potvrdi</button>
</form>






